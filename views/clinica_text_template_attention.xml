<?xml version="1.0"?>
<odoo>

	<record id="clinica_text_template_form" model="ir.ui.view">
         <field name="name">attention.quick.template.form</field>
         <field name="model">attention.quick.template</field>
         <field name="arch" type="xml">
         <form string="Template Form Attention">
         	<sheet>
         		<group name='main_group'>
	         		<group name='sub_group1'>
	         			<field name="name" required="1"/>
	         			<field name="type" required="1" string="Tipo"/>
	         		</group>
	         		<group name='sub_group2'>
	         		<field name="user_id" required="0" string="Usuario"/>
	         		</group>
         		</group>
            <group name="system_review" string="Revisión por sistemas" attrs="{'invisible':[('type','!=','15')]}">
                <field name="system_review_ids" nolabel="1">
                    <tree editable="bottom">
                        <field name="type_review"/>
                        <field name="system_review"/>
                    </tree>
                </field>
            </group>
            <group name="background" string="Antecedentes" attrs="{'invisible':[('type','!=','5')]}">
                <field name="background_ids" nolabel="1">
                    <tree editable="bottom">
                        <field name="type_background"/>
                        <field name="value_background"/>
                    </tree>
                </field>
            </group>
         		
         		<group name="text">
         			<field name='template_text' string="Texto predeterminado"/>
         		</group>
         		
         	</sheet>
         </form>
         </field>
     </record>
     
     <record id="clinica_text_template_attention_tree" model="ir.ui.view">
          <field name="name">attention.quick.template.tree</field>
          <field name="model">attention.quick.template</field>
          <field name="arch" type="xml">
              <tree string="Template Tree">
                  <field name="name"/>
                  <field name="type"/>
                  <field name="user_id"/>
              </tree>
          </field>
      </record>
      
      
      <record id="action_clinica_text_template_attention" model="ir.actions.act_window">
          <field name="name">Plantillas</field>
          <field name="res_model">attention.quick.template</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="view_id" ref="clinica_text_template_attention_tree"/>
      </record> 
      
      <menuitem id="menu_clinica_text_template_attention"
          name="Plantillas Atención"
          parent="menu_doctor_config_details"
          action="clinica_digital_consultorio.action_clinica_text_template_attention"
          sequence="13"/>

</odoo>