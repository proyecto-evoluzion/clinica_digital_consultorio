<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>


<!--
    Herencia al reporte generico - Modalidad Background.
-->

        <template id="freddy_barrios_external_layout_bk">
            <div class="header o_background_header" style="text-align: center;">
                <div class="col-xs-12">
                    <t t-if="company.is_primary_logo and not company.is_secondary_logo">
                        <div class="col-xs-6">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 120px;"/>
                        </div>
                        <div class="col-xs-6">
                            <h4>
                                Consultorio <t t-if="o.doctor_id.sex == 'male'"> Dr.</t><t t-else="">Dra.</t> <t t-esc="o.doctor_id.firstname"/> <t t-esc="o.doctor_id.lastname"/> -  
                                <t t-if="o.doctor_id.doctor_speciality_id">
                                    <t t-esc="o.doctor_id.doctor_speciality_id.name"/>
                                </t>
                            </h4><br></br>
                            <t t-if="company.report_header">
                                <span style="font-size: 16px;"><t t-esc="company.report_header"/></span><br></br>
                            </t>
                            <span style="font-size: 16px;"><t t-esc="company.street"/></span><br></br>
                            <span style="font-size: 16px;">Teléfono <t t-esc="company.phone"/> (08 AM - 05 PM). </span>&amp;nbsp<span style="color: blue;"><t t-esc="o.doctor_id.email"/></span>
                        </div>
                    </t>
                    <t t-if="company.is_primary_logo and company.is_secondary_logo">
                        <div class="col-xs-4">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 120px;"/>
                        </div>
                        <div class="col-xs-4">
                            <h4>
                                Consultorio <t t-if="o.doctor_id.sex == 'male'"> Dr.</t><t t-else="">Dra.</t> <t t-esc="o.doctor_id.firstname"/> <t t-esc="o.doctor_id.lastname"/> -  
                                <t t-if="o.doctor_id.doctor_speciality_id">
                                    <t t-esc="o.doctor_id.doctor_speciality_id.name"/>
                                </t>
                            </h4><br></br>
                            <t t-if="company.report_header">
                                <span style="font-size: 16px;"><t t-esc="company.report_header"/></span><br></br>
                            </t>
                            <span style="font-size: 16px;"><t t-esc="company.street"/></span><br></br>
                            <span style="font-size: 16px;">Teléfono <t t-esc="company.phone"/> (08 AM - 05 PM). </span>&amp;nbsp<span style="color: blue;"><t t-esc="o.doctor_id.email"/></span>
                        </div>
                        <div class="col-xs-4">
                            <img t-if="company.logo2" t-att-src="'data:image/png;base64,%s' % to_text(company.logo2)" style="max-height: 120px;"/>
                        </div>
                    </t>
                    <t t-if="not company.is_primary_logo">
                        <div class="col-xs-12">
                            <h4>
                                Consultorio <t t-if="o.doctor_id.sex == 'male'"> Dr.</t><t t-else="">Dra.</t> <t t-esc="o.doctor_id.firstname"/> <t t-esc="o.doctor_id.lastname"/> -  
                                <t t-if="o.doctor_id.doctor_speciality_id">
                                    <t t-esc="o.doctor_id.doctor_speciality_id.name"/>
                                </t>
                            </h4><br></br>
                            <t t-if="company.report_header">
                                <span style="font-size: 16px;"><t t-esc="company.report_header"/></span><br></br>
                            </t>
                            <span style="font-size: 16px;"><t t-esc="company.street"/></span><br></br>
                            <span style="font-size: 16px;">Teléfono <t t-esc="company.phone"/> (08 AM - 05 PM). </span>&amp;nbsp<span style="color: blue;"><t t-esc="o.doctor_id.email"/></span>
                        </div>
                    </t>
                </div>
            </div>

            <div class="article o_report_layout_background">
                <t t-raw="0" />
            </div>

            <div class="footer o_background_footer">
                <div class="text-center">
                    <div class="text-muted">
                        Página:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="freddy_barrios_external_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>

            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>

            <t t-call="clinica_digital_consultorio.freddy_barrios_external_layout_bk"><t t-raw="0"/></t>
        </template>
    </data>
</odoo>
