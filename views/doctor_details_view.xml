        </record> 
        
        <!-- Doctor form -->
        <record id="doctor_doctor_form" model="ir.ui.view">
            <field name="name">doctor.professional.form</field>
            <field name="model">doctor.professional</field>
            <field name="arch" type="xml">
            <form string="doctor Form">
                <sheet>
                    <group name="main_info" >
                    	<group>
                    		<field name="profession_type" required="1" string="Profesión"/>
                            <field name="multiple_format" invisible="0"/>
	                        <field name="email" required="1"/>
	                        <field name="phone" string="Teléfono"/>
                            <field name="medical_record" string="Registro Médico"/>
                            <field name="doctor_provider_code" required="1"/>
                    	</group>
                    	<group>
	                        <field name="lastname"  required="1" string="Primer Apellido"/> 
	                        <field name="surname" string="Segundo Apellido"/>
                            <field name="firstname" required="1" string="Primer Nombre"/>
                            <field name="middlename" string="Segundo Nombre"/>
                           
                            <field name="tdoc_rips" placeholder="Type of Document" required="1"/>

                            <field name="name" attrs="{'invisible':[('tdoc_rips','in',['CC','TI'])]}"/>

                            <field name="ref" attrs="{'invisible':[('tdoc_rips','not in',['CC','TI'])]}"/>
                        
                          
                      
                        

                    	</group>
                    </group>
                    <h3>Nombre personalizado - Firma Digital</h3>
                    <field name="digital_sign" nolabel="1" placeholder="Nombres Apellidos" style="width:60%"/>
                    <notebook colspan="4">
	                    <page string="My procedures">
	                        <field name="product_ids" nolabel="1" 
	                        	context="{'search_default_health_procedure': 1}" domain="[('id','in',domain_product_ids)]"/>
                            <field name="domain_product_ids" invisible="1"/>
	                    </page>
                        <page string="My formats attentions" attrs="{'invisible':[('multiple_format','=',False)]}">
                            <field name="attention_format_ids" nolabel="1" options="{'no_create': True}" widget="many2many_tags" style="margin-top:1%;"/>
                        </page>
	                </notebook>
                </sheet>
            </form>
            </field>
        </record>
        <!-- Doctor Tree -->
