<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>


<!--
    Herencia al reporte generico - Modalidad Background.
-->

        <template id="freddy_barrios_external_layout_bk">
            <div class="header o_background_header" style="text-align: center;">
                <h2>Consultorio Dr. Freddy Barrios Segura - Médico Especialista en Pediatría</h2><br></br>
                <span style="font-size: 16px;">Consultorio 408 Clínica de Marly JCG, Avenida Los Zipas, Chía.</span><br></br>
                <span style="font-size: 16px;">Teléfono 6532000 extensión 8456 (08 AM - 05 PM). </span><span style="color: blue;">barrios.pediatra@gmail.com</span>
            </div>

            <div class="article o_report_layout_background">
                <t t-raw="0" />
            </div>

            <div class="footer o_background_footer">
                <div class="text-center">
                    <div class="text-muted">
                        Page:
                        <span class="page"/>
                        of
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="freddy_barrios_external_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>

            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>

            <t t-call="clinica_digital_consultorio.freddy_barrios_external_layout_bk"><t t-raw="0"/></t>
        </template>
    </data>
</odoo>
