<?xml version="1.0"?>
<odoo>

	
	<record id="res_company_view_form_inherit" model="ir.ui.view">
         <field name="name">res.company.inherit</field>
         <field name="model">res.company</field>
         <field name="inherit_id" ref="base.view_company_form"/>
         <field name="arch" type="xml">

          <xpath expr="//field[@name='vat']" position="replace">
            <field name="bussines_name" string="Bussines name"/>
            <field name="title" placeholder="IPS / Consultorio / Clínica"/>
            <field name="horary"/>

          </xpath>    
          <field name="report_footer" position="after">
            <field name="insurer_id" required="1"/>
          </field>
          <field name="partner_id" position="after">
            <field name="service_provider" />
            <field name="is_primary_logo"/>
            <field name="is_secondary_logo" groups="base.group_system" attrs="{'invisible':[('is_primary_logo','=',False)]}"/>
            <field name="logo2" 
                attrs="{'invisible':[('is_secondary_logo','=',False)]}" 
                widget="image" 
                class="oe_avatar" 
                options="{&quot;size&quot;: [90, 90]}"
            />
          </field>

          <notebook position="inside">
            <page name="cups_code" string="Configuración Procedimientos Institución">
              <group string="Códigos CUPS">
                <field name="cups_code_ids" required="1"/>
              </group>
            </page>
          </notebook>


         </field> 
    </record>
    
</odoo>